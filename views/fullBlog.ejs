<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include("./partials/fullBlogStyle.ejs") %>
    
</head>
<title>Blog Post</title>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-4 p-4 blog-container">
        <h2 class="text-center"><%= fullBlog.title %></h2>
        <hr>
        <div class="text-center">
            <img src="<%= fullBlog.coverImage %>" class="img-fluid blog-image">
        </div>
        <div class="mt-4 blog-content">
            <%= fullBlog.bodyContent %>
        </div>
        <div class="blog-author mt-4 d-flex align-items-center">
            <img src="<%= fullBlog.createdBy.profileImg %>" class="author-image">
            <div class="ms-3">
                <h4>Written By <%= fullBlog.createdBy.username %></h4>
                <p><%= fullBlog.createdAt %></p>
            </div>
        </div>
    </div>

    <!-- Comment Section -->
    <div class="container comment-section">
        <% if (locals.currentUser) { %>
            <form action="/blog/comment/<%=fullBlog._id%>" method="POST" class="comment-form">
                <div class="mb-3">
                    <input type="text" name="commentContent" class="form-control" id="comment" placeholder="Enter your comment">
                </div>
                <button type="submit" class="btn btn-primary">Comment</button>
            </form>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                Sign in to write comments
            </div>
        <% } %>

        <h3>Comments</h3>
        <% if (locals.allComments) { %>
            <div class="container mt-4">
                <% allComments.forEach(comment => { %>
                    <div class="comment">
                        <div class="comment-author">
                            <img src="<%= comment.createdBy.profileImg %>" class="author-image">
                            <div class="comment-content">
                                <strong><%= comment.createdBy.username %></strong> â€¢ <%= comment.createdAt %>
                                <p><%= comment.commentContent %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <%- include("./partials/script") %>
</body>
</html>
