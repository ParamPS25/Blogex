<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        }
        .card-body {
            flex-grow: 1;
        }
        .user-list {
            position:absolute;
            top: 73px; /* Adjusting list height based on navbar height */
            right: 0;
            width: 20%;
            height: calc(100% - 73px);
            overflow-y: auto;
            background-color: #f8f9fa;
            padding: 10px;
            box-shadow: -2px 0 5px rgba(0,0,0,0.1);
        }
        .blog-list {
            padding-right: 15%;
        }
        .user-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        .user-item img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }
        .user-item a {
            text-decoration: none;
        }

    </style>

</head>
<title>Blogex</title>
<body>
    <%- include("./partials/nav") %>
    <% if (!locals.currentUser) { %>
        <div class="alert alert-warning" role="alert" style="font-size: large;">
            <a href="/user/signin"> Signin to add blogs </a>
           </div>
    <% } %>
    <div class="container mt-3 blog-list">
        <div class="row g-4">
            <!--allBlogs and currentUser passed from index.js get "/"-->
            <% allBlogs.forEach(blog => { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
                    <div class="card h-100 w-100">
                        <img class="card-img-top" src="<%= blog.coverImage %>" alt="Card image cap">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <h6>by <%= blog.createdBy.username %></h6>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="user-list">
        <h5>All Users</h5>
        <ul class="list-group">
            <% allUsers.forEach(user => { %>
                <li class="list-group-item user-item">
                    <img src="<%= user.profileImg %>" alt="Profile Picture">
                    <% if (locals.currentUser != undefined && currentUser._id == user._id) { %>
                        <a href="/user/<%= user._id %>" style="color: green;"> You </a>

                    <% } else { %>
                        <a href="/user/<%= user._id %>">  <%= user.username %>  </a>
                    <% } %>
                </li>
            <% }) %>
        </ul>
    </div>

    <%- include("./partials/script") %>
</body>
</html>
